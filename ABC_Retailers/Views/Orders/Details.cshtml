<h2>Order Details</h2>
<p>Status: <strong>@Model.Order.Status</strong></p>

<table class="table table-bordered table-striped">
    <tbody>
        <tr><th>Order ID</th><td>@Model.Order.RowKey</td></tr>
        <tr><th>Customer ID</th><td>@Model.Order.CustomerId</td></tr>
        <tr><th>Product Name</th><td>@Model.Order.ProductName</td></tr>
        <tr><th>Quantity</th><td>@Model.Order.Quantity</td></tr>
        <tr><th>Unit Price</th><td>@Model.Order.UnitPrice.ToString("C")</td></tr>
        <tr><th>Total Price</th><td>@Model.Order.TotalPrice.ToString("C")</td></tr>
        <tr><th>Order Date</th><td>@Model.Order.OrderDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td></tr>
        <tr>
            <th>Proof of Payment</th>
            <td>
                @if (!string.IsNullOrEmpty(Model.ProofFileName))
                {
                    <a class="btn btn-sm btn-primary" target="_blank" href="@Model.ProofFileUrl">View/Download</a>
                }
                else
                {
                    <span>No proof uploaded</span>
                }
            </td>
        </tr>
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
</div>
