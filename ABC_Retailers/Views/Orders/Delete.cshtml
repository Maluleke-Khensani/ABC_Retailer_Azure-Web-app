@model Orders

<h2>Delete Order</h2>

<div>
    <h4>Are you sure you want to delete this order?</h4>
    <div>
        <strong>Order ID:</strong> @Model.RowKey <br />
        <strong>Customer:</strong> @Model.CustomerId
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
    <input type="hidden" name="rowKey" value="@Model.RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


