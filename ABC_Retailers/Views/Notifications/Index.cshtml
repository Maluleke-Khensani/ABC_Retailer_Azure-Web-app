@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@model List<ABC_Retailers.Models.Notifications>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext?.User;
    if (user != null && user.IsInRole("Admin"))
    {
        Layout = "_LayoutAdmin";
    }
    else
    {
        Layout = "_LayoutCustomer";
    }
}



@{
    ViewBag.Title = "Notifications";
    var isAdmin = User.IsInRole("Admin");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .toast-container {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1060;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-3 text-center">📢 Notifications</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">No notifications found.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var note in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h6 class="card-title text-primary">@note.ProductName</h6>
                            <p class="card-text">@note.Message</p>
                            <span class="badge bg-secondary">@note.Category</span>
                            @if (note.NewStock != null)
                            {
                                <span class="badge bg-success">Stock: @note.NewStock</span>
                            }
                        </div>
                        <div class="card-footer text-muted small d-flex justify-content-between align-items-center">
                            <span>@note.CreatedAt.LocalDateTime.ToString("g")</span>
                            @if (isAdmin)
                            {
                                <a asp-action="Delete" asp-route-partitionKey="@note.PartitionKey" asp-route-rowKey="@note.RowKey"
                                   class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (ViewBag.NewNotification != null)
{
    <div class="toast-container">
        <div class="toast show align-items-center text-bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    @ViewBag.NewNotification
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
