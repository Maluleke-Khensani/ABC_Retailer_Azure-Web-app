@model ABC_Retailers.Models.Notifications

@{
    Layout = "_LayoutAdmin";
}

@{
    ViewBag.Title = "Delete Notification";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: #F8F8F8;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-card {
        border: none;
        border-radius: 14px;
        box-shadow: 0 5px 12px rgba(0, 0, 0, 0.15);
        background: white;
        max-width: 600px;
        margin: 50px auto;
        padding: 2rem;
    }

    .btn-danger {
        background-color: #B9375E;
        border: none;
    }

        .btn-danger:hover {
            background-color: #992E4D;
        }

    .btn-cancel {
        background-color: #BE9A60;
        border: none;
        color: white;
    }

        .btn-cancel:hover {
            background-color: #A8834C;
            color: white;
        }

    h4 {
        color: #B9375E;
        font-weight: 600;
    }
</style>

<div class="delete-card text-center">
    <h4>Are you sure you want to delete this notification?</h4>
    <p class="mt-3 text-muted">This action cannot be undone.</p>

    <div class="card mt-4 mb-4 border-0 shadow-sm">
        <div class="card-body text-start">
            <h5 class="card-title text-primary">@Model.ProductName</h5>
            <p class="card-text">@Model.Message</p>
            <span class="badge bg-secondary">@Model.Category</span>
            @if (Model.NewStock != null)
            {
                <span class="badge bg-success">Stock: @Model.NewStock</span>
            }
            <div class="mt-2 text-muted small">Created: @Model.CreatedAt.LocalDateTime.ToString("g")</div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="partitionKey" value="@Model.PartitionKey" />
        <input type="hidden" name="rowKey" value="@Model.RowKey" />
        <div class="d-flex justify-content-center gap-3">
            <a asp-action="Index" class="btn btn-cancel">Cancel</a>
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </div>
    </form>
</div>
