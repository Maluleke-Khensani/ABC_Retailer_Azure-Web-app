@model ABC_Retailers.Models.ViewModels.HomeViewModel


@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background-color: #EEEEEE;
    }

    .product-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .hero-bg {
        background: linear-gradient(135deg, #E5BEB5, #896C6C);
    }

    .btn-gradient {
        background: linear-gradient(to right, #EEE6CA, #F5FAE1); /* same as Browse Products */
        color: black; 
        font-weight: 600;
        padding: 12px 30px;
        border-radius: 10px;
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-gradient:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
        <a class="navbar-brand" href="/">ABC Retailers</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Register" asp-action="Register">Products</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Register" asp-action="Register">Orders</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Register" asp-action="Register">Customers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Register" asp-action="Register">Upload</a></li>
                
            </ul>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<div class="container mb-5">
    <div class="p-5 text-center rounded-3 hero-bg text-white shadow-lg">
        <h1 class="display-5 fw-bold">Welcome to ABC Retailers</h1>
        <p class="lead">Discover the best products from every category.</p>

        <!-- Login / Register Buttons for everyone -->
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a class="btn btn-gradient btn-lg fw-bold text-dark" asp-controller="Login" asp-action="Index">Login</a>
            <a class="btn btn-gradient btn-lg fw-bold text-dark" asp-controller="Register" asp-action="Register">Register</a>
        </div>

        <a class="btn btn-gradient btn-lg text-black fw-bold mt-3" asp-controller="Register" asp-action="Register">
            Browse Products
        </a>
    </div>
</div>


<!-- Featured Products -->
<div class="mt-5">
    <h3 class="text-dark mb-4">Best Selling Items</h3>
    <div class="row g-4">
        @if (Model.FeaturedProducts == null || !Model.FeaturedProducts.Any())
        {
            <div class="col-12">
                <div class="alert alert-secondary text-dark">No featured products available.</div>
            </div>
        }
        else
        {
            @foreach (var p in Model.FeaturedProducts)
            {
                <div class="col-md-6 col-lg-6">
                    <div class="card h-100 shadow-lg border-0 rounded-3 position-relative product-card">
                        @if (!string.IsNullOrEmpty(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl" class="card-img-top rounded-top-3" style="height:180px; object-fit:contain;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex justify-content-center align-items-center rounded-top-3" style="height:180px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="card-body text-center">
                            <h5 class="fw-bold">@p.ProductName</h5>
                            <p class="text-info fw-semibold mb-2">@p.Price.ToString("C")</p>
                            <a asp-controller="Register" asp-action="Register" class="btn btn-outline-primary btn-sm">
                                Register to View
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Footer -->
<footer class="bg-light text-center text-muted py-3 mt-5">
    &copy; @DateTime.Now.Year ABC Retailers. All rights reserved.
</footer>
