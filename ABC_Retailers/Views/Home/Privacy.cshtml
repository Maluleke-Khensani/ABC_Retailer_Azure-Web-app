@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext?.User;
    if (user != null && user.IsInRole("Admin"))
    {
        Layout = "_LayoutAdmin";
    }
    else
    {
        Layout = "_LayoutCustomer";
    }
}


@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-5">
            <h2 class="text-center text-primary mb-4">Privacy Policy</h2>
            <p class="lead text-muted text-center">
                At <strong>ABC Retailers</strong>, we respect your privacy and are committed to protecting your personal data.
            </p>

            <hr class="my-4" />

            <h4 class="text-dark">Information We Collect</h4>
            <p>
                We collect information such as your name, email, and order history when you use our services.
            </p>

            <h4 class="text-dark">How We Use Your Information</h4>
            <ul>
                <li>To process and deliver your orders.</li>
                <li>To provide customer support and assistance.</li>
                <li>To improve our website and product offerings.</li>
            </ul>

            <h4 class="text-dark">Your Rights</h4>
            <p>
                You have the right to request access, correction, or deletion of your data at any time.
            </p>

            <div class="alert alert-info mt-4 text-center">
                If you have any questions, please reach out to us via the <a asp-controller="Home" asp-action="Contact">Contact Us</a> page.
            </div>
        </div>
    </div>
</div>
