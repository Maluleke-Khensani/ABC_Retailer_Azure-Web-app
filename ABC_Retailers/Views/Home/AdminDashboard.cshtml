@{
    ViewData["Title"] = "Admin Dashboard";
    var username = User.Identity?.Name ?? "Administrator";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: #F3F3F3;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
        background-color: #EEE6CA;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .nav-link, .navbar-brand {
        color: #333 !important;
        font-weight: 600;
    }

    .nav-link:hover {
        color: #BE9A60 !important;
    }

    .btn-gradient {
        background: linear-gradient(to right, #EEE6CA, #F5FAE1);
        color: black;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 10px;
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .btn-gradient:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }

    .hero-section {
        background: linear-gradient(135deg, #BFD8B8, #6C896C);
        color: white;
        border-radius: 16px;
        padding: 60px 20px;
        text-align: center;
        margin-bottom: 40px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .admin-card {
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .admin-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 18px rgba(0,0,0,0.15);
    }

    footer {
        background-color: #EEE6CA;
        color: #444;
        padding: 15px;
        border-top: 1px solid #ddd;
        margin-top: 50px;
    }
</style>

<!-- ✨ Admin Navigation -->
<nav class="navbar navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand fw-bold" href="#">ABC Retailers Admin</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item">
                    <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-gradient">
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>
<br/>

<!-- Admin Cards -->
<div class="container">
    <div class="row g-4">
        <div class="col-md-4">
            <a asp-controller="Customers" asp-action="AdminView" class="card admin-card h-100 shadow-sm text-decoration-none text-dark text-center p-3">
                <i class="fas fa-users fa-2x mb-2 text-primary"></i>
                <h5 class="fw-bold">Manage Customers</h5>
                <p class="text-muted">View, edit, and manage customer accounts.</p>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="ProductCatalog" asp-action="Index" class="card admin-card h-100 shadow-sm text-decoration-none text-dark text-center p-3">
                <i class="fas fa-box-open fa-2x mb-2 text-success"></i>
                <h5 class="fw-bold">Manage Product Catalog</h5>
                <p class="text-muted">Add, update, or remove products.</p>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Orders" asp-action="Index" class="card admin-card h-100 shadow-sm text-decoration-none text-dark text-center p-3">
                <i class="fas fa-clipboard-list fa-2x mb-2 text-warning"></i>
                <h5 class="fw-bold">View & Process Orders</h5>
                <p class="text-muted">Monitor orders and update statuses.</p>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Home" asp-action="Contact" class="card admin-card h-100 shadow-sm text-decoration-none text-dark text-center p-3">
                <i class="fas fa-envelope fa-2x mb-2 text-info"></i>
                <h5 class="fw-bold">View Contact Page</h5>
                <p class="text-muted">Respond to customer messages.</p>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Home" asp-action="Privacy" class="card admin-card h-100 shadow-sm text-decoration-none text-dark text-center p-3">
                <i class="fas fa-shield-alt fa-2x mb-2 text-secondary"></i>
                <h5 class="fw-bold">Manage Privacy Policy</h5>
                <p class="text-muted">Update policies and terms of service.</p>
            </a>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="text-center">
    &copy; @DateTime.Now.Year ABC Retailers | Admin Dashboard
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
