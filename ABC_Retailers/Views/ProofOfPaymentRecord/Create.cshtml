@model ABC_Retailers.Models.ProofOfPaymentRecord
@{
    ViewBag.Title = "Proof of Payment";
}

<style>
    html, body {
        background: #F2F2F2;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        color: #434343;
        margin: 0;
    }

    .simple-topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        background: #DCDCDC;
        padding: 12px 16px;
        border-radius: 8px;
        margin: 18px;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .logo-wrap {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        border-radius: 8px;
        border: 2px solid #BE9A60;
    }

    .logo-svg {
        width: 28px;
        height: 28px;
    }

    .form-container {
        background: #fff;
        padding: 24px;
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(0,0,0,0.1);
        margin: 24px auto;
        max-width: 600px;
    }

    h2 {
        color: #B9375E;
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-top: 12px;
        font-weight: 600;
    }

    input[type="text"],
    input[type="file"],
    input[type="number"],
    input[type="date"],
    select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-top: 4px;
    }

    .btn-submit {
        display: inline-block;
        margin-top: 18px;
        padding: 10px 16px;
        background: #B9375E;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
    }

        .btn-submit:hover {
            background: #a02f52;
        }

    .upload-info {
        margin-top: 8px;
        font-size: 12px;
        color: #666;
    }

    .message {
        text-align: center;
        color: #BE9A60;
        font-weight: 600;
        margin-top: 10px;
    }
</style>

<!-- Topbar -->
<div class="simple-topbar">
    <div class="brand">
        <div class="logo-wrap" aria-hidden="true">
            <svg class="logo-svg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                <rect x="20" y="16" width="24" height="26" rx="4" fill="#B9375E" />
                <rect x="26" y="6" width="4" height="8" rx="1" fill="#B9375E" />
                <rect x="34" y="6" width="4" height="8" rx="1" fill="#B9375E" />
                <path d="M 18 44 q 14 12 28 0" stroke="#B9375E" stroke-width="3" fill="none" stroke-linecap="round" />
            </svg>
        </div>
        <div>
            <div style="font-weight:700;color:#434343;">ABC Retailer</div>
            <div style="font-size:12px;color:#BE9A60;">Proof of Payment</div>
        </div>
    </div>
</div>

<!-- Form -->
<div class="form-container">
    <h2>Upload Proof of Payment</h2>

    @using (Html.BeginForm("Create", "ProofOfPaymentRecord", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <!-- Order ID Dropdown -->
    <label for="OrderId">Order ID</label>
        <select asp-for="OrderId" asp-items="Model?.Orders ?? new List<SelectListItem>()">
            <option value="">-- Select Order --</option>
        </select>
    <span asp-validation-for="OrderId" class="text-danger small"></span>

    <!-- Username Dropdown -->
    <label for="Username">Username</label>
        <select asp-for="Username" asp-items="ViewBag.Customers ?? new SelectList(Enumerable.Empty<string>())">
            <option value="">-- Select Username --</option>
        </select>
    <span asp-validation-for="Username" class="text-danger small"></span>

    <!-- Payment Date -->
    <label for="PaymentDate">Payment Date</label>
    <input type="date" id="PaymentDate" name="PaymentDate" value="@Model?.PaymentDate.ToString(" yyyy-MM-dd")" required />

    <!-- Proof of Payment -->
    <label for="ProofOfPayment">Upload File</label>
    <input type="file" id="ProofOfPayment" name="ProofOfPayment" accept=".jpg,.jpeg,.png,.pdf" required />
    <p class="upload-info">Accepted formats: JPG, PNG, PDF. Max size: 5MB</p>

    <button type="submit" class="btn-submit">Submit Proof</button>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
    <p class="message">@ViewBag.Message</p>
    }
</div>
