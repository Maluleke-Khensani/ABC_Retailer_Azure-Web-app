@model ABC_Retailers.Models.ProductCatalog

<h2>Delete Product Catalog Item</h2>
<p>Are you sure you want to delete this item?</p>

<div>
    <strong>@Model.ProductName</strong><br />
    Category: @Model.Category <br />
    Price: @Model.Price.ToString("C") <br />
    Stock: @Model.Stock <br />
    Description: @Model.Description
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

