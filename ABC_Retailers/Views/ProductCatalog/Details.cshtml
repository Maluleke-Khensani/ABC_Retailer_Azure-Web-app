@model ABC_Retailers.Models.ProductCatalog
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/placeholder.png")"
                 alt="@Model.ProductName"
                 class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <h5 class="text-muted">@Model.Category</h5>
            <p class="mt-3">@Model.Description</p>
            <h4 class="mt-3">@Model.Price.ToString("C")</h4>

            <a asp-action="Index" class="btn btn-secondary mt-4">Back to Browse</a>
        </div>
    </div>
</div>
