@using Azure.Core
@model Dictionary<string, List<ABC_Retailers.Models.ProductCatalog>>

@{
    ViewBag.Title = "Product Catalog";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        background: #F2F2F2;
        color: #434343;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        box-sizing: border-box;
    }

    *, *::before, *::after {
        box-sizing: inherit;
    }

    /* Shared topbar style */
    .simple-topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        background: #DCDCDC;
        padding: 12px 16px;
        border-radius: 8px;
        margin: 18px;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .logo-wrap {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        border-radius: 8px;
        border: 2px solid #BE9A60;
    }

    .logo-svg {
        width: 28px;
        height: 28px;
    }

    .stat {
        text-align: center;
        min-width: 140px;
        background: #fff;
        padding: 8px 12px;
        border-radius: 6px;
    }

        .stat .label {
            font-size: 12px;
            color: #666;
        }

        .stat .value {
            font-size: 20px;
            font-weight: 700;
            color: #B9375E;
        }

    /* Grid for products */
    .product-section {
        margin: 0 18px 24px 18px;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 18px;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0 1px 4px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .product-card img {
            height: 150px;
            object-fit: contain;
            margin-bottom: 10px;
        }

        .product-card h6 {
            font-weight: 700;
            margin: 0 0 4px 0;
            font-size: 15px;
            color: #434343;
        }

        .product-card p {
            margin: 0 0 4px 0;
            font-size: 13px;
            color: #666;
        }

    .price {
        font-weight: 700;
        color: #BE9A60;
    }

    .btn-view {
        display: block;
        text-align: center;
        padding: 6px;
        border-radius: 6px;
        background: #B9375E;
        color: #fff;
        font-weight: 600;
        text-decoration: none;
        font-size: 13px;
        margin-top: 8px;
    }
</style>

<div style="margin: 18px;">
    <form method="get" asp-action="Index" class="search-form" style="display:flex; gap: 8px;">
        <input type="text" name="search"
               value="@ViewContext.HttpContext.Request.Query["search"]"
               placeholder="Search products..."
               style="padding:8px; width:250px; border-radius:4px; border:1px solid #ccc;" />
        <button type="submit" style="padding:8px 12px; border-radius:4px; border:none; background:#B9375E; color:#fff;">
            Search
        </button>
        <a href="@Url.Action("Index", "ProductCatalog")"
           style="padding:8px 12px; border-radius:4px; border:none; background:#666; color:#fff; text-decoration:none; display:flex; align-items:center;">
            Reset
        </a>
    </form>
</div>



<div class="product-page">

    <!-- Reusable top bar -->
    <div class="simple-topbar">
        <div class="brand">
            <div class="logo-wrap" aria-hidden="true">
                <svg class="logo-svg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
                    <rect x="20" y="16" width="24" height="26" rx="4" fill="#B9375E" />
                    <rect x="26" y="6" width="4" height="8" rx="1" fill="#B9375E" />
                    <rect x="34" y="6" width="4" height="8" rx="1" fill="#B9375E" />
                    <path d="M 18 44 q 14 12 28 0" stroke="#B9375E" stroke-width="3" fill="none" stroke-linecap="round" />
                </svg>
            </div>
            <div>
                <div style="font-weight:700;color:#434343;">ABC Retailer</div>
                <div style="font-size:12px;color:#BE9A60;">Electronics &amp; Gadgets</div>
            </div>
        </div>

        <!-- total products -->
        <div class="stat">
            <div class="label">Total Products</div>
            <div class="value">
                @Model.Values.Sum(list => list.Count)
            </div>
        </div>
    </div>

    <!-- Products -->
    <div class="product-section">
        @if (!Model.Any() || Model.Values.All(list => !list.Any()))
        {
            <p class="no-items">No items found for your search.</p>
        }
        else
        {
            @foreach (var categoryGroup in Model)
            {
                <h3 style="color:#434343; margin-top:20px;">@categoryGroup.Key</h3>
                <hr />
                <div class="product-grid">
                    @foreach (var product in categoryGroup.Value)
                    {
                        <div class="product-card">
                            <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/images/placeholder.png")"
                                 alt="@product.ProductName" />

                            <div>
                                <h6>@product.ProductName</h6>
                                <p>@product.Description</p>
                                <p class="price">@product.Price.ToString("C")</p>
                            </div>

                            <a class="btn-view"
                               asp-action="Details"
                               asp-route-category="@product.Category"
                               asp-route-productName="@product.ProductName">
                                View Details
                            </a>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>
