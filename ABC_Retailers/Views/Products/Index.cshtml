@model IEnumerable<ABC_Retailers.Models.Products>

@{
    ViewBag.Title = "Products";
}

<Style>
    html, body {
        height: 100%;
        margin: 0;
        background: #F2F2F2;
        color: #434343;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        box-sizing: border-box;
    }

    *, *::before, *::after {
        box-sizing: inherit;
    }

    .simple-topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        background: #DCDCDC;
        padding: 12px 16px;
        border-radius: 8px;
        margin: 18px;
    }

        .simple-topbar .brand {
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .logo-wrap {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        border-radius: 8px;
        border: 2px solid #BE9A60;
    }

    .logo-svg {
        width: 28px;
        height: 28px;
    }

    .simple-topbar .stat {
        text-align: center;
        min-width: 140px;
        background: #fff;
        padding: 8px 12px;
        border-radius: 6px;
    }

    .stat .label {
        font-size: 12px;
        color: #666;
    }

    .stat .value {
        font-size: 24px;
        font-weight: 700;
        color: #B9375E;
    }

    .simple-topbar .actions {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .btn {
        display: inline-block;
        padding: 8px 12px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
    }

    .btn-add {
        background: #BE9A60;
        color: #fff;
    }

    .table-container {
        margin: 0 18px 24px 18px;
        overflow-x: auto;
    }

    .products-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 6px;
    }

        .products-table th, .products-table td {
            padding: 10px 12px;
            text-align: left;
            border-bottom: 1px solid #F0E9E9;
        }

        .products-table thead th {
            background: #434343;
            color: #fff;
            font-weight: 700;
            font-size: 13px;
        }
</Style>

<div class="products-page">

    <div class="simple-topbar">
        <div class="brand">
            <div class="logo-wrap" aria-hidden="true">
                <svg class="logo-svg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="ABC Retailer">
                    <rect x="20" y="16" width="24" height="26" rx="4" fill="#B9375E" />
                    <rect x="26" y="6" width="4" height="8" rx="1" fill="#B9375E" />
                    <rect x="34" y="6" width="4" height="8" rx="1" fill="#B9375E" />
                    <path d="M 18 44 q 14 12 28 0" stroke="#B9375E" stroke-width="3" fill="none" stroke-linecap="round" />
                </svg>
            </div>
            <div>
                <div style="font-weight:700;color:#434343;">ABC Retailer</div>
                <div style="font-size:12px;color:#BE9A60;">Electronics & Gadgets</div>
            </div>
        </div>

        <div class="stat">
            <div class="label">Total Products</div>
            <div class="value">@Model.Count()</div>
        </div>

        <div class="actions">
            <a class="btn btn-add" href="@Url.Action("Create")">＋ Add Product</a>
        </div>
    </div>

    <div class="table-container">
        <table class="products-table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RowKey</td>
                        <td>@item.ProductName</td>
                        <td>@item.Category</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Stock</td>
                        <td>
                            <a asp-action="Details" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey">Details</a> |
                            <a asp-action="Edit" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey">Edit</a> |
                            <a asp-action="Delete" asp-route-partitionKey="@item.PartitionKey" asp-route-rowKey="@item.RowKey">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
