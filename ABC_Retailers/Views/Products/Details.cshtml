@model ABC_Retailers.Models.Products

<div class="container mt-5">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Product Details</h3>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Product Name</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3 text-muted">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3 text-muted">Stock</dt>
                <dd class="col-sm-9">@Model.Stock</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>
</div>
